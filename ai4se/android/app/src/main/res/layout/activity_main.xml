<?xml version="1.0" encoding="utf-8"?>
<!--
    Three screens in a single FrameLayout. Only one is VISIBLE at a time;
    the others are GONE. MainActivity toggles visibility between screens.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         SCREEN 1 â€” SETUP
         User selects language, enters model path, taps Start.
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ScrollView
        android:id="@+id/screenSetup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Logo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š"
                android:textSize="72sp"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textColor="#E0E0FF"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:textSize="15sp"
                android:textColor="#9090bb"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="28dp" />

            <!-- Language selector (built dynamically in MainActivity) -->
            <LinearLayout
                android:id="@+id/langGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Model file card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#12FFFFFF"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/model_file_label"
                    android:textColor="#aad4ff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/modelPathInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="#66FFFFFF"
                    android:backgroundTint="#44FFFFFF"
                    android:padding="12dp"
                    android:textSize="12sp"
                    android:hint="@string/model_path_hint"
                    android:inputType="textUri"
                    android:layout_marginBottom="14dp" />

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white"
                    android:padding="14dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/progressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#aaaaaa"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/offline_note"
                android:textColor="#7090aa"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         SCREEN 2 â€” TOPICS
         Icon grid; no reading required to navigate.
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/screenTopics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- User bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#12FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/userLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘¤ User 1"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnNewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_user"
                android:textSize="13sp"
                android:backgroundTint="#22FFFFFF"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_do_you_need"
            android:textColor="#E0E0FF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_picture"
            android:textColor="#9090bb"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- 2-column, 3-row topic grid (populated in MainActivity) -->
        <GridLayout
            android:id="@+id/topicsGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="3" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@android:color/white"
            android:backgroundTint="#22FFFFFF"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         SCREEN 3 â€” VOICE
         Large mic button; every AI answer is spoken aloud.
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/screenVoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <!-- Header: back â—€  |  topic badge  |  spacer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="â—€"
                android:textSize="16sp"
                android:backgroundTint="#22FFFFFF"
                android:textColor="@android:color/white"
                android:padding="0dp" />

            <TextView
                android:id="@+id/topicBadge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ¥ Health"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center" />

            <View
                android:layout_width="44dp"
                android:layout_height="44dp" />

        </LinearLayout>

        <!-- Mic button (large, circular via shape) -->
        <Button
            android:id="@+id/micButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="ðŸŽ¤"
            android:textSize="48sp"
            android:backgroundTint="#2E7D32"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_speak"
            android:textColor="#E0E0FF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/hintLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mic_hint"
            android:textColor="#9090bb"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Scrollable conversation transcript -->
        <ScrollView
            android:id="@+id/transcriptScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0DFFFFFF"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/transcriptContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />

        </ScrollView>

        <!-- Footer: Repeat | Clear | Topics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRepeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/repeat"
                android:textColor="@android:color/white"
                android:backgroundTint="#22FFFFFF"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/clear"
                android:textColor="@android:color/white"
                android:backgroundTint="#22FFFFFF"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnTopics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/topics"
                android:textColor="@android:color/white"
                android:backgroundTint="#22FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
